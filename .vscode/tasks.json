{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${input:buildDir}"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "buildDir",
            "type": "promptString",
            "description": "Enter the CMake build directory (e.g., build/Debug or cmake-build-debug)",
            "default": "${workspaceFolder}/Game/build/Debug"
        }
    ]
}